{
    "name": "pabon/camara-comercio-bogota-sdk",
    "description":  "",
    "type": "library",
    "license": "proprietary",
    "repositories": [
        {
            "type": "composer",
            "url": "https://repository.placetopay.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-bcmath": "*",
        "ext-json": "*",
        "ext-soap": "*",
        "placetopay/tangram": "^1.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.0",
        "symfony/var-dumper": "^5.3",
        "nesbot/carbon": "^2.53"
    },
    "autoload": {
        "psr-4": {
            "Placetopay\\CamaraComercioBogotaSdk\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --verbose --testdox",
        "test-ci" : "vendor/bin/phpunit --verbose --testdox --log-junit ./test-reports/junit.xml",
        "phpcs" : "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php",
        "phpcs-validate" : "vendor/bin/php-cs-fixer fix --dry-run --diff"
    }
}
